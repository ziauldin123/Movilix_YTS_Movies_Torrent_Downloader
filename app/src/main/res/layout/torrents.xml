<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:id="@+id/download_lyout"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#252147"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/quality_img"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/quality_1080p" />


        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#252147"
            android:layout_margin="5dp"
            app:cardElevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:drawableLeft="@drawable/ic_folder_black_24dp"
                        android:fontFamily="@font/abel"
                        android:padding="2dp"

                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:gravity="center_horizontal" />
                    <TextView
                        android:id="@+id/filesize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/abel"
                        android:padding="2dp"
                        android:text="File Size"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:gravity="center_horizontal" />
                    <TextView
                        android:id="@+id/size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/abel"
                        android:padding="2dp"
                        android:text="12.5Mb"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:gravity="center_horizontal" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:cardBackgroundColor="#65AF2B"
                        app:cardElevation="10dp">
                        <TextView
                            android:id="@+id/subtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:background="#29B6F0"
                            android:drawableLeft="@drawable/ic_arrow_downward_black_24dp"
                            android:drawablePadding="2dp"
                            android:fontFamily="@font/abel"
                            android:padding="2dp"
                            android:text="Subtitle"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"

                            android:gravity="center_horizontal" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/carbutton1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#65AF2B"
                        app:cardElevation="10dp">

                        <Button
                            android:id="@+id/download_btn"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@id/overlapImage"
                            android:background="@drawable/rpplew"
                            android:fontFamily="@font/actor"
                            android:text="Torrent"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:drawableLeft="@drawable/ic_arrow_downward_black_24dp"
                            android:textColor="@android:color/white" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.cardview.widget.CardView>